{% extends "base.html.twig" %}
{% block title %}Book gallery{% endblock %}
{% block body %}
    {{ parent() }}
    {% if (user) %}
        <a href="{{ path('book_create_page') }}">Add new book</a>
    {% endif %}
    
	{% for book in bookList %}
		<div>
			<div>
				<p>
					<span>{{ book.name }}<span> by <span>{{ book.author}}</span>
				</p>
				<div>
					<img src="{{ book.cover }}" />
				</div>
			</div>
		</div>
	{% endfor %}
{% endblock %}
